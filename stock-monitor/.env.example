# ============================================
# 输出模式: telegram, notion, both
# ============================================
OUTPUT_MODE=notion

# ============================================
# Telegram配置（如使用telegram或both模式）
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# Notion配置（如使用notion或both模式）
# ============================================
NOTION_API_KEY=your_notion_api_key_here
NOTION_PARENT_PAGE_ID=your_parent_page_id_here
NOTION_DATABASE_ID=your_database_id_here  # 可选，运行 --init-notion 自动生成

# ============================================
# Imgur图床配置（可选，用于将图表嵌入Notion）
# 申请地址: https://api.imgur.com/oauth2/addclient
# ============================================
IMGUR_CLIENT_ID=your_imgur_client_id_here

# ============================================
# 调度配置（旧版单市场配置，兼容保留）
# ============================================
SCHEDULE_TIME=15:05

# ============================================
# 多市场配置
# ============================================

# 启用哪些市场（逗号分隔）: a_share, us, hk
ENABLED_MARKETS=a_share,us,hk

# --------------------------------------------
# A股配置
# --------------------------------------------
A_SHARE_ENABLED=true
A_SHARE_SCHEDULE_TIME=15:05
A_SHARE_DAYS_OF_WEEK=mon-fri

# --------------------------------------------
# 美股配置
# 注意：美股时间以北京时间为准
# 美股收盘时间：北京时间次日早上（夏令时4:00，冬令时5:00）
# --------------------------------------------
US_ENABLED=true
US_SCHEDULE_TIME=06:00
US_DAYS_OF_WEEK=tue-sat

# --------------------------------------------
# 港股配置
# --------------------------------------------
HK_ENABLED=true
HK_SCHEDULE_TIME=16:05
HK_DAYS_OF_WEEK=mon-fri

# 港股数据模式: etf（推荐）或 index
# etf模式：使用港股ETF作为板块代理，更稳定
# index模式：使用恒生行业指数（需要AKShare支持）
HK_DATA_MODE=etf
